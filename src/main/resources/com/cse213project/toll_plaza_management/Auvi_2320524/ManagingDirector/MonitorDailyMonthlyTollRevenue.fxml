<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cse213project.toll_plaza_management.Auvi_2320524.ManagingDirector.MonitorRevenueController"
            fx:id="rootPane"
            prefHeight="800.0" prefWidth="1150.0">
    <children>
        <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0">
            <children>
                <Label text="Monitor Daily/Monthly Toll Revenue">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0"/>
                    </font>
                </Label>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Login Credentials">
                            <font>
                                <Font name="Segoe UI Semibold" size="16.0"/>
                            </font>
                        </Label>
                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="usernameField" promptText="Username" prefWidth="200.0"/>
                                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="200.0"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Report Configuration">
                            <font>
                                <Font name="Segoe UI Semibold" size="16.0"/>
                            </font>
                        </Label>
                        <HBox spacing="15.0">
                            <children>
                                <ComboBox fx:id="reportTypeComboBox" promptText="Select Report Type (Daily/Monthly)"
                                          prefWidth="280.0"/>
                                <DatePicker fx:id="fromDatePicker" promptText="From Date" prefWidth="200.0"/>
                                <DatePicker fx:id="toDatePicker" promptText="To Date" prefWidth="200.0"/>
                            </children>
                        </HBox>
                        <Button fx:id="generateReportButton" text="Generate Report" onAction="#handleGenerateReport"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150.0"/>
                    </children>
                </VBox>

                <Label fx:id="statusLabel" text="" textFill="GREEN">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Label>

                <TableView fx:id="revenueTable" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="reportTypeColumn" text="Report Type" prefWidth="200.0"/>
                        <TableColumn fx:id="fromDateColumn" text="From Date" prefWidth="200.0"/>
                        <TableColumn fx:id="toDateColumn" text="To Date" prefWidth="200.0"/>
                        <TableColumn fx:id="revenueAmountColumn" text="Revenue Amount" prefWidth="250.0"/>
                    </columns>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button text="Back to Menu" onAction="#handleBackToMenu"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                prefWidth="120.0"/>
                        <Button text="Logout" onAction="#handleLogout"
                                style="-fx-background-color: #f44336; -fx-text-fill: white;"
                                prefWidth="120.0"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets topRightBottomLeft="15"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
