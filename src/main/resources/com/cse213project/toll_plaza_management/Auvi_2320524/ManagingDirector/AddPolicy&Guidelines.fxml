<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cse213project.toll_plaza_management.Auvi_2320524.ManagingDirector.PolicyGuidelinesController"
            fx:id="rootPane"
            prefHeight="720.0" prefWidth="1100.0">
    <children>
        <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0">
            <children>
                <Label text="Add Policy &amp; Guidelines">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0"/>
                    </font>
                </Label>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Login Credentials">
                            <font>
                                <Font name="Segoe UI Semibold" size="16.0"/>
                            </font>
                        </Label>
                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="usernameField" promptText="Username" prefWidth="200.0"/>
                                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="200.0"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Policy Information">
                            <font>
                                <Font name="Segoe UI Semibold" size="16.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="policyTitleField" promptText="Policy Title" prefWidth="400.0"/>
                        <TextArea fx:id="policyDescriptionArea" promptText="Policy Description"
                                  prefRowCount="4" prefWidth="400.0"/>
                        <DatePicker fx:id="effectiveDatePicker" promptText="Effective Date" prefWidth="200.0"/>
                        <Button fx:id="applyPolicyButton" text="Apply Policy" onAction="#handleApplyPolicy"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150.0"/>
                    </children>
                </VBox>

                <Label fx:id="statusLabel" text="" textFill="GREEN">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Label>

                <TableView fx:id="policyTable" prefHeight="320.0">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Policy Title" prefWidth="250.0"/>
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="350.0"/>
                        <TableColumn fx:id="dateColumn" text="Effective Date" prefWidth="200.0"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="250.0"/>
                    </columns>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button text="Back to Menu" onAction="#handleBackToMenu"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                prefWidth="120.0"/>
                        <Button text="Logout" onAction="#handleLogout"
                                style="-fx-background-color: #f44336; -fx-text-fill: white;"
                                prefWidth="120.0"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets topRightBottomLeft="15"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
